<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/primary_dark</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/primary_text</item>
    </style>
    <style name="customStyleBar2" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
    </style>
    <style name="customStylePopup" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/primary_text</item>
    </style>
    <style name="ShowcaseViewStyleOne" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showcase_background</item>
        <item name="sv_showcaseColor">@color/showcase_color</item>
        <item name="sv_buttonText">Next</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitleStyle</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseDetailStyle</item>
    </style>
    <style name="ShowcaseTitleStyleT" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">23dp</item>
    </style>
    <style name="ShowcaseDetailStyleT" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="ShowcaseTitleStyle" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFA000</item>
        <item name="android:textSize">23dp</item>
    </style>
    <style name="ShowcaseDetailStyle" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="ShowcaseViewStyleTwo" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">@color/showcase_backgroundf</item>
        <item name="sv_showcaseColor">@color/showcase_color</item>
        <item name="sv_buttonText">Got it!</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/ShowcaseTitleStyleT</item>
        <item name="sv_detailTextAppearance">@style/ShowcaseDetailStyleT</item>
    </style>
</resources>
