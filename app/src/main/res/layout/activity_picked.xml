<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.shreyathegreat.newshuffle.Picked">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
-->
        <include
            android:id="@+id/t_toolbar"
            layout="@layout/app_bar_transparent"
            />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_food"
            android:layout_width="234dp"
            android:layout_height="234dp"
            android:src="@drawable/samosa"
            app:border_width="5dp"
            android:layout_marginTop="40dp"
            app:border_color="@color/accent"
            android:layout_below="@+id/t_toolbar"
            android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Samosa"
        android:id="@+id/tv_picked"
        android:textSize="40dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/img_food"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Recipe"
        android:background="@drawable/pill"
        android:id="@+id/b_getrecipe"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/tv_picked"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
