<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.shreyathegreat.newshuffle.DisplayRecipeActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/im"
        android:transitionName="profile"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"

        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p_time"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="Preparation Time : "
                android:layout_below="@+id/im"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"/>
            <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/ptime_entry"
        android:textSize="17dp"
        android:textStyle="italic"
                android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/p_time"
        android:layout_below="@+id/im"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c_time"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Cooking Time : "
        android:textColor="#000000"
        android:layout_below="@+id/p_time"
        android:paddingTop="5dp"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/ctime_entry"
        android:textSize="17dp"
        android:textStyle="italic"
        android:layout_toRightOf="@+id/c_time"

        android:layout_below="@+id/ptime_entry"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingr"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Ingredients : "
        android:textColor="#000000"
        android:layout_below="@+id/c_time"
        android:paddingTop="5dp"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingr_entry"
        android:textSize="13dp"
        android:textStyle="italic"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/ingr"
        android:layout_marginTop="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/steps"
        android:textSize="17dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Steps : "
        android:layout_below="@+id/ingr_entry"
        android:paddingTop="5dp"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/steps_entry"
        android:textSize="13dp"
        android:textStyle="italic"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/steps"
        android:layout_marginTop="6dp"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
